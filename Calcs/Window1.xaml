<Window x:Class="Calcs.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calcs"
        mc:Ignorable="d"
        Title="Quit" Height="100" Width="450">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="30" HorizontalAlignment="Center">
            <Button Content="Save all files" Margin="0 0 15 0" Click="Button_Click" Width="125"/>
            <Button Content="Quit without saving" Margin="0 0 15 0" Click="Button_Click_1" Width="125"/>
            <Button Content="Cancel" Click="Button_Click_2" Width="125"/>
        </StackPanel>
    </Grid>
</Window>
