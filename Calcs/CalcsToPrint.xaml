<Window x:Class="Calcs.CalcsToPrint"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calcs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Choose calcs to print"/>
            <ItemsControl ItemsSource="{Binding Calcs}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding Print}"/>
                            <TextBlock Text="{Binding TypeName}"/>
                            <TextBlock Text="{Binding InstanceName}"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Print" Click="Button_Click"/>
            <Button Content="Cancel" Click="Button_Click_1"/>
        </StackPanel>
    </Grid>
</Window>
